{
  "compilerOptions": {
    "declaration": true, // important for a library
    "declarationDir": "dist/types",
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "moduleResolution": "node",
    // "rootDir": "src",
    "esModuleInterop": true,
    // "module": "commonjs"
    // "module": "es2015",
    "module": "es6"
  },
  "include": ["src/**/*"]
}
